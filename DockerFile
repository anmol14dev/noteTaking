# Stage 1: Build the Spring Boot application
# Use a valid OpenJDK 21 JDK slim image tag
FROM openjdk:21-jdk-slim as build

# Set the working directory inside the build container
WORKDIR /app

# Copy the Gradle wrapper and project files
COPY gradlew .
COPY gradle gradle
COPY build.gradle.kts .
COPY settings.gradle.kts .
COPY src src

# Make the Gradle wrapper executable
RUN chmod +x ./gradlew

# Build the Spring Boot executable JAR
RUN ./gradlew clean bootJar -x test --no-daemon

# Stage 2: Create the final production image
# Use a valid OpenJDK 21 JRE slim image tag
FROM openjdk:21-jre-slim

# Set the working directory for the final container
WORKDIR /app

# Copy the executable JAR from the build stage
COPY --from=build /app/build/libs/*.jar app.jar

# Expose the port on which your Spring Boot application runs
EXPOSE 8080

# Define the command to run your Spring Boot application when the container starts
ENTRYPOINT ["java", "-jar", "app.jar"]

# --- Optional: Add a health check (good practice for containerized apps) ---
# HEALTHCHECK --interval=30s --timeout=10s --retries=5 \
#  CMD curl -f http://localhost:8080/actuator/health || exit 1